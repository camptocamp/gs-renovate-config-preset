{
  'pre-commit': { enabled: true },
  customManagers: [
    /** Do updates on pre-commit additional dependencies */
    {
      customType: 'regex',
      fileMatch: ['^\\.pre\\-commit\\-config\\.yaml$'],
      matchStrings: [
        // Matches dependency definitions in the format:
        // - package==1.2.3
        // - package[extra]==1.2.3
        // - package@1.2.3
        " +- '?(?<depName>[^' @=\\[\\]]+)(\\[[^\\]]+\\])?(@|==)(?<currentValue>[^' @=]+)'? # (?<datasource>.+)",
      ],
    },
  ],
  packageRules: [
    /** Blacklist sirwart/ripsecrets version v0.1.9 */
    {
      matchPackageNames: ['sirwart/ripsecrets'],
      allowedVersions: '!=v0.1.9',
      description: 'Blacklist sirwart/ripsecrets version v0.1.9',
    },
    /** Minimal version of codespell-project/codespell to v2.4.1 */
    {
      matchPackageNames: ['codespell-project/codespell'],
      matchCurrentVersion: '<2.4.0',
      allowedVersions: '<2.5.0,>=2.4.1',
      enabled: true,
    },
  ],
}
