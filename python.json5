{
  customManagers: [
    /** Python version in actions/setup-python action */
    {
      customType: 'regex',
      fileMatch: ['^\\.github/workflows/.*\\.yaml$'],
      matchStrings: [' python-version: [\'"](?<currentValue>[0-9\\.]+)[\'"]'],
      datasourceTemplate: 'python-version',
      depNameTemplate: 'python',
    },
  ],
  packageRules: [
    /** Ungroup Python dependencies */
    {
      matchDepNames: ['python'],
      groupName: 'Python',
    },
    /** In file `.python-version`, use the `<major>.<minor>` version */
    {
      matchFileNames: ['.python-version', '**/.python-version'],
      versioning: 'regex:^(?<major>\\d+)\\.(?<minor>\\d+)$',
      allowedVersions: '/^[0-9]+\\.[0-9]+$/',
    },
    /** Don't update the Python version in the `pyproject.toml`, `.python-version`, and workflow files */
    {
      matchFileNames: [
        'pyproject.toml',
        '**/pyproject.toml',
        '.python-version',
        '**/.python-version',
        '.github/workflows/**.ya?ml',
      ],
      matchDepNames: ['python'],
      enabled: false,
    },
    /** Temporarily disable updates of `pylint` to version 4.x to avoid issues with `pylint-django` */
    {
      matchDepNames: ['pylint'],
      allowedVersions: '!/^4\\./',
    },
  ],
}
